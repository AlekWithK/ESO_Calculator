<TabbedPanelHeader>
	background_color: [.1,1,.8,1] #Button color	
<TabbedPanel>
	do_default_tab: False
	tab_width: (self.width - 6) / 3
	tab_pos: 'top_mid'
	
	TabbedPanelItem: #Parse Normalizer
		text: "Parse Normalizer"
		font_name: 'Impact'
		font_size: 19
		GridLayout:
			cols: 1
			padding: [150, 15]
			spacing: [0, 10]
			canvas.before:
				Color:
					rgba:[.21,.21,.21,1]
				Rectangle:
					size: self.size
					pos: self.pos
					source: 'Resources/gradient.jpg'		
			TextInput:
				id: t_dps
				multiline: False
				write_tab: False
				input_filter: 'int'		
				hint_text: "Total DPS"
				tooltip_text: "Your total DPS"
				halign: 'center'
				font_size: 20			

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
			TextInput:
				id: c_chance
				multiline: False
				write_tab: False
				input_filter: 'float'				
				hint_text: "Crit Chance"
				halign: 'center'
				font_size: 20

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
			TextInput:
				id: t_hits
				multiline: False
				write_tab: False
				input_filter: 'int'		
				hint_text: "Total Hits"
				halign: 'center'
				font_size: 20			

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
			TextInput:
				id: t_c_hits
				multiline: False
				write_tab: False
				input_filter: 'int'				
				hint_text: "Total Critical Hits"
				halign: 'center'
				font_size: 20

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
			TextInput:
				id: t_non_hits
				multiline: False
				write_tab: False
				input_filter: 'int'		
				hint_text: "Total Non-Hits"
				halign: 'center'
				font_size: 20			

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
			TextInput:
				id: c_damage
				multiline: False
				write_tab: False
				input_filter: 'float'				
				hint_text: "Critical Damage"
				halign: 'center'
				font_size: 20

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40

			Label:
				canvas.before:
					Color:
						rgba:[.1,1,.8,.05]
					Rectangle:
						size: self.size
						pos: self.pos
					Line:
						width: 5
						rectangle: self.x, self.y, self.width, self.height

				id: result_lbl
				padding_y: [20, 20]
				text: ""
				font_size: 23
				font_name: "ROCK"

			Button:
				padding: [20, 20]
				text: "Calculate"
				font_name: "Impact"
				font_size: 26
				background_color: [.1,1,.8,1]

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 50

				on_release: root.normalizer_pressed()

	TabbedPanelItem: #Crit Calculator
		text: "Crit Calculator"
		font_name: 'Impact'
		font_size: 19
		GridLayout:
			cols: 4
			canvas.before:
				Color:
					rgba:[.21,.21,.21,1]
				Rectangle:
					size: self.size
					pos: self.pos
					source: 'Resources/gradient.jpg'
			
			Label:
				text: "BUFF"
				font_name: "IMPACT"
				font_size: 26
				underline: True
			Label:
				text: "MAX"
				font_name: "IMPACT"
				font_size: 26
				underline: True
			Label:
				text: "SELECT"
				font_name: "IMPACT"
				font_size: 26
				underline: True
			Label:
				text: "UPTIME"
				font_name: "IMPACT"
				font_size: 26
				underline: True

			#-----ROW 1-----
			Label:
				text: "Major Force:"
				font_name: "DUBAI-BOLD"
				font_size: 20
			Label:
				text: "20%"
			CheckBox:
				active: True
				on_active: root.checkbox_click(self, self.active, "maj_force")				
			TextInput:
				id: maj_force
				multiline: False
				write_tab: False

				input_filter: 'float'
				hint_text: '.75'
				halign: 'center'
				padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

			#-----ROW 2-----
			Label:
				text: "Minor Force:"
				font_name: "DUBAI-BOLD"
				font_size: 20
			Label:
				text: "10%"
			CheckBox:
				active: True
				on_active: root.checkbox_click(self, self.active, "min_force")
			TextInput:
				id: min_force
				multiline: False
				write_tab: False

				input_filter: 'float'
				hint_text: '.90'
				halign: 'center'
				padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

			#Result Row
			Label:
				text: "Avg Crit Damage: "
			Label:
				id: avg_crit
				text: "74%"
			Label: 
				text: "Max Crit Damage: "
			Label:
				id: max_crit
				text: "max"


	TabbedPanelItem: #Kilt Sheet
		text: "Kilt Cheatsheet"
		font_name: 'Impact'
		font_size: 19