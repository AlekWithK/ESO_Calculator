<TabbedPanelHeader>
	background_color: [.1,1,.8,1] #Button color
<TabbedPanel>
	do_default_tab: False
	tab_width: self.size[0] / 3
	tab_pos: 'top_mid'
	
	TabbedPanelItem: #Parse Normalizer
		text: "Parse Normalizer"
		font_name: 'Impact'
		font_size: 19
		GridLayout:
			cols: 1
			padding: [150, 15]
			spacing: [0, 10]
			canvas.before:
				Color:
					rgba:[.21,.21,.21,1]
				Rectangle:
					size: self.size
					pos: self.pos
					source: 'Resources/gradient.jpg'		
			TextInput:
				id: t_dps
				multiline: False
				write_tab: False
				input_filter: 'int'		
				hint_text: "Total DPS"
				tooltip_text: "Your total DPS"
				halign: 'center'
				font_size: 20			

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
			TextInput:
				id: c_chance
				multiline: False
				write_tab: False
				input_filter: 'float'				
				hint_text: "Crit Chance"
				halign: 'center'
				font_size: 20

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
			TextInput:
				id: t_hits
				multiline: False
				write_tab: False
				input_filter: 'int'		
				hint_text: "Total Hits"
				halign: 'center'
				font_size: 20			

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
			TextInput:
				id: t_c_hits
				multiline: False
				write_tab: False
				input_filter: 'int'				
				hint_text: "Total Critical Hits"
				halign: 'center'
				font_size: 20

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
			TextInput:
				id: t_non_hits
				multiline: False
				write_tab: False
				input_filter: 'int'		
				hint_text: "Total Non-Hits"
				halign: 'center'
				font_size: 20			

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
			TextInput:
				id: c_damage
				multiline: False
				write_tab: False
				input_filter: 'float'				
				hint_text: "Critical Damage"
				halign: 'center'
				font_size: 20

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40

			Label:
				canvas.before:
					Color:
						rgba:[.1,1,.8,.05]
					Rectangle:
						size: self.size
						pos: self.pos
					Line:
						width: 5
						rectangle: self.x, self.y, self.width, self.height

				id: result_lbl
				padding_y: [20, 20]
				text: ""
				font_size: 23
				font_name: "ROCK"
				#font_name: "CORBELB"

			Button:
				padding: [20, 20]
				text: "Calculate"
				font_name: "Impact"
				font_size: 26
				background_color: [.1,1,.8,1]

				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 50

				on_release: root.button_pressed()

	TabbedPanelItem: #Crit Calculator
		text: "Crit Calculator"
		font_name: 'Impact'
		font_size: 19

	TabbedPanelItem: #Kilt Sheet
		text: "Kilt Cheatsheet"
		font_name: 'Impact'
		font_size: 19